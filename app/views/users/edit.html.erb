<div class="small-container center-block">
  <p>Editar usuario</p>

  <%# falta comprobar si no hay una imagen guardada %>
  <% if current_user.avatar.attached? %>
    <%= image_tag url_for(current_user.avatar), height: 150 %>
  <% end %>
  <%= form_with(model: current_user, local: true)  do |form|%>
    <div class="field">
      <%= form.label :avatar%>
      <%= form.file_field :avatar%>
    </div>

    <div class="field">
      <%=form.submit "Guardar", class: "btn btn-primary"%>
    </div>
  <%end%>
</div>
